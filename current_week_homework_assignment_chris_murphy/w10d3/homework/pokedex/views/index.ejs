<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
    <style>body {
        background-size:auto;

    }</style>
</head>
<body>
    <%- include("partials/header") %>
    <div class="container">
        <% for(let i = 0; i < pokemon.length; i++) { %>
            <div class="pokemon-card">
                <a href="/pokemon/<%=i %>">
                    <img src=<%=pokemon[i].img %> alt=<%= pokemon[i].name %> >
                    <h4><%= pokemon[i].name %></h4>
                </a>
                <a id='edit' href="/pokemon/<%= i %>/edit">Edit this Pokemon</a>
                <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE" />
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
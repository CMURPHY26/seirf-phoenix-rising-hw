<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
</head>
<body>
    <h1>Products</h1>
    <h3><a href="/products/new">Add a new product</a></h3>
    <div class="container">
       <% for(let i = 0; i < products.length; i++){ %>
        <div class="products">
            <a href="/products/<%= products[i].id%>">
                <h3><%= products[i].name %></h3>
                <img src=<%= products[i].img %> alt=<%= products[i].name%>>
                <h4>Price: $<%= products[i].price %></h4>
            </a>
            <form action="/products/<%=products[i].id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form>
        </div>
       <% } %>
    </div>
</body>
</html>